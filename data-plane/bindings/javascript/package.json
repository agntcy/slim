  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "vite": "^5.0.0"
  },
  "peerDependencies": {
    "react-native": ">=0.72.0"
  },
