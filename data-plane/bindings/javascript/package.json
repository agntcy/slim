{
  "name": "@agntcy/slim-bindings",
  "version": "0.7.0",
  "description": "JavaScript/TypeScript bindings for SLIM data plane - enables React Native and Web (WASM) integrations",
  "main": "./generated/typescript/index.js",
  "types": "./generated/typescript/index.d.ts",
  "react-native": "./generated/react-native/index.ts",
  "browser": "./generated/wasm/index.js",
  "files": [
    "generated/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "task generate",
    "build:wasm": "task build:wasm",
    "test": "task test",
